<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/rocketListFragment">

    <fragment
        android:id="@+id/rocketListFragment"
        android:name="cz.cvut.popovma1.spacex.feature.rocketlist.system.RocketListFragment"
        android:label="RocketListFragment">
        <action
            android:id="@+id/action_rocketListFragment_to_rocketDetailFragment"
            app:destination="@id/rocketDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/rocketDetailFragment"
        android:name="cz.cvut.popovma1.spacex.feature.rocketdetail.system.RocketDetailFragment"
        android:label="RocketDetailFragment" >
        <action
            android:id="@+id/action_rocketDetailFragment_to_rocketLaunchFragment"
            app:destination="@id/rocketLaunchFragment" />
        <argument
            android:name="rocketId"
            app:argType="string" />
        <argument
            android:name="rocketName"
            app:argType="string" />
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/rocketLaunchFragment"
        android:name="cz.cvut.popovma1.spacex.feature.rocketlaunch.system.RocketLaunchFragment"
        android:label="RocketLaunchFragment" >
        <argument
            android:name="rocketName"
            app:argType="string" />
    </fragment>
</navigation>